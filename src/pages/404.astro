---
import MainLayout from "../layouts/Layout.astro";
---

<MainLayout title="404 - Página no encontrada">
  <section class="error-section">
    <div class="container">
      <div class="error-content">
        <h1 class="error-code fade-in">404</h1>
        <div class="error-divider fade-in"></div>
        <p class="error-message fade-in">
          ¡Vaya! Parece que la página que buscas se ha perdido en el tiempo.
        </p>

        <div class="error-actions fade-in">
          <a href="/" class="btn btn-primary">Volver al Inicio</a>
          <div class="error-links">
            <a href="/#work" class="error-link">Ver Proyectos</a>
            <a href="/#contact" class="error-link">Contáctame</a>
          </div>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .error-section {
    min-height: 90vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    background-image: radial-gradient(var(--text-muted) 1px, transparent 1px);
    background-size: 30px 30px;
    background-position: center;
  }

  .error-content {
    max-width: 600px;
    margin: 0 auto;
    padding: 4rem;
    background: var(--bg-color);
    border: 2px solid var(--text-main);
    box-shadow: 12px 12px 0px var(--accent);
  }

  .error-code {
    font-size: 8rem;
    font-family: var(--font-heading);
    color: var(--text-main);
    line-height: 1;
    margin-bottom: 2rem;
    text-shadow: 4px 4px 0px var(--accent);
  }

  .error-divider {
    width: 60px;
    height: 4px;
    background: var(--accent);
    margin: 0 auto 2rem;
  }

  .error-message {
    font-size: 1.25em;
    color: var(--text-main);
    margin-bottom: 3rem;
    line-height: 1.6;
    font-family: var(--font-body);
  }

  .error-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
  }

  .error-links {
    display: flex;
    gap: 2rem;
  }

  .error-link {
    color: var(--text-muted);
    text-decoration: none;
    font-size: 0.9em;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: color 0.3s ease;
  }

  .error-link:hover {
    color: var(--text-main);
  }

  @media (max-width: 768px) {
    .error-content {
      padding: 2rem;
      margin: 1rem;
    }
    .error-code {
      font-size: 5rem;
    }
    .error-links {
      flex-direction: column;
      gap: 1rem;
    }
  }
</style>
