---
import MainLayout from "../layouts/Layout.astro";

const socialLinks = [
  { name: "Portafolio", url: "https://ka0s.site/me" },
  { name: "GitHub", url: "https://ka0s.site/gh" },
  { name: "LinkedIn", url: "https://ka0s.site/in" },
  { name: "Twitter", url: "https://ka0s.site/x" },
];

const services = [
  {
    title: "Diseño Web",
    description:
      "Soluciones a medida, ideales para restaurantes, estudios de yoga, tiendas de moda y más.",
  },
  {
    title: "SEO y Optimización de Velocidad",
    description:
      "Todos los sitios están optimizados para motores de búsqueda y un rendimiento ultrarrápido.",
  },
  {
    title: "Soporte y Actualizaciones",
    description:
      "Ofrezco soporte continuo para mantener tu sitio seguro y siempre actualizado.",
  },
];

const contactInfo = [
  { text: "tunuevaweb.es", href: "https://ka0s.site/tnw" },
  { text: "contacto@tunuevaweb.es", href: "mailto:contacto@tunuevaweb.es" },
  { text: "@tunuevawebya", href: "https://instagram.com/tunuevawebya" },
  { text: "@tunuevaweb", href: "https://www.tiktok.com/@tunuevaweb" },
];

const examples = [
  { name: "Bite&Smash", href: "https://bite-and-smash.tunuevaweb.es" },
  { name: "Pulse Studio", href: "https://pulse-studio.tunuevaweb.es" },
];
---

<MainLayout title="Info - Gonzalo Azaldegi">
  <div class="info-page">
    <div class="container animate-content">
      <header class="info-header fade-in">
        <h1 class="info-hero-title">Gonzalo Azaldegi</h1>
        <div class="info-badge">Desarrollador Web | UI/UX Designer</div>
        <p class="info-hero-description">
          Soy Gonzalo Azaldegi, un desarrollador web especializado en frameworks
          modernos como Astro y Vue. Me apasiona el diseño minimalista y crear
          experiencias web atractivas y funcionales.
        </p>
      </header>

      <section class="info-links-grid">
        {
          socialLinks.map((link) => (
            <a
              href={link.url}
              target="_blank"
              rel="noopener noreferrer"
              class="info-link-card fade-in"
            >
              <span class="info-link-name">{link.name}</span>
              <span class="info-link-arrow">↗</span>
            </a>
          ))
        }
      </section>

      <section class="info-section fade-in">
        <h2 class="info-section-title">TuNuevaWeb — Servicios</h2>
        <p class="info-section-intro">
          Ofrezco sitios web modernos y funcionales para negocios de todos los
          tamaños, centrándome en el alto impacto visual y rendimiento.
        </p>

        <div class="services-list">
          {
            services.map((service) => (
              <div class="service-row">
                <h3 class="service-name">{service.title}</h3>
                <p class="service-desc">{service.description}</p>
              </div>
            ))
          }
        </div>
      </section>

      <section class="info-contact-footer fade-in">
        <div class="contact-grid">
          {
            contactInfo.map((item) => (
              <a href={item.href} class="contact-pill">
                {item.text}
              </a>
            ))
          }
        </div>
      </section>

      <footer class="info-footer fade-in">
        <a href="/#contact" class="btn btn-primary">Hablemos</a>
        <br /><br />
        <a href="https://ka0s.site/blog" target="_blank" class="blog-link">
          Lee mis artículos sobre desarrollo web →
        </a>
      </footer>
    </div>
  </div>
</MainLayout>

<style>
  .info-page {
    padding: 10rem 0 6rem;
    background-image: radial-gradient(var(--text-muted) 1px, transparent 1px);
    background-size: 40px 40px;
    background-opacity: 0.1;
  }

  .info-header {
    text-align: center;
    margin-bottom: 5rem;
  }

  .info-hero-title {
    font-size: 4rem;
    font-family: var(--font-heading);
    margin-bottom: 1rem;
    color: var(--text-main);
  }

  .info-badge {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background: var(--accent);
    color: var(--text-main);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 0.8em;
    border-radius: 4px;
    margin-bottom: 2rem;
    border: 2px solid var(--text-main);
  }

  .info-hero-description {
    max-width: 650px;
    margin: 0 auto;
    font-size: 1.25em;
    line-height: 1.6;
    color: var(--text-main);
  }

  .info-links-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
    margin-bottom: 6rem;
  }

  .info-link-card {
    padding: 1.5rem;
    background: var(--bg-color);
    border: 2px solid var(--text-main);
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-decoration: none;
    color: var(--text-main);
    font-weight: 600;
    transition: all 0.2s ease;
    box-shadow: 4px 4px 0px var(--text-main);
  }

  .info-link-card:hover {
    transform: translate(-2px, -2px);
    box-shadow: 6px 6px 0px var(--accent);
    background: var(--bg-color);
  }

  .info-section {
    background: var(--text-main);
    color: var(--bg-color);
    padding: 4rem;
    border-radius: 8px;
    margin-bottom: 6rem;
    box-shadow: 10px 10px 0px var(--accent);
  }

  .info-section-title {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: var(--bg-color);
  }

  .info-section-intro {
    font-size: 1.2em;
    opacity: 0.9;
    margin-bottom: 3rem;
  }

  .service-row {
    border-bottom: 1px solid rgba(243, 240, 231, 0.2);
    padding: 1.5rem 0;
  }

  .service-row:last-child {
    border-bottom: none;
  }

  .service-name {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
    color: var(--accent);
  }

  .service-desc {
    font-size: 1em;
    opacity: 0.8;
  }

  .contact-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 6rem;
  }

  .contact-pill {
    padding: 0.8rem 1.5rem;
    border: 1px solid var(--text-main);
    border-radius: 50px;
    text-decoration: none;
    color: var(--text-main);
    font-size: 0.9em;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .contact-pill:hover {
    background: var(--text-main);
    color: var(--bg-color);
  }

  .info-footer {
    text-align: center;
  }

  .blog-link {
    color: var(--text-muted);
    text-decoration: none;
    font-weight: 600;
    transition: color 0.3s ease;
  }

  .blog-link:hover {
    color: var(--accent);
  }

  @media (max-width: 768px) {
    .info-hero-title {
      font-size: 2.5rem;
    }
    .info-section {
      padding: 2rem;
    }
    .info-section-title {
      font-size: 1.8rem;
    }
  }
</style>
