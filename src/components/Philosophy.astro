---
import portfolioData from "../data/portfolio.json";
const { philosophy } = portfolioData;
---

<section class="section bg-alt">
    <div class="container">
        <div class="section-grid">
            <h2 class="section-title">{philosophy.title}</h2>
            <div class="section-content">
                {
                    philosophy.values.map((value) => (
                        <div class="value fade-in">
                            <div class="value-header">
                                <h3 class="value-title">{value.title}</h3>
                                <div class="value-line" />
                            </div>
                            <p class="value-tagline">{value.tagline}</p>
                            <p class="value-description">{value.description}</p>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>
</section>

<style>
    .value {
        margin-bottom: 5rem;
    }

    .value:last-child {
        margin-bottom: 0;
    }

    .value-header {
        display: flex;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 1rem;
    }

    .value-title {
        color: var(--text-main);
        font-size: 1.8em;
        font-family: var(--font-heading);
    }

    .value-line {
        flex-grow: 1;
        height: 2px;
        background: repeating-linear-gradient(
            to right,
            var(--accent),
            var(--accent) 5px,
            transparent 5px,
            transparent 10px
        ); /* Retro dashed line */
    }

    .value-tagline {
        color: var(--accent);
        font-size: 0.9em;
        margin-bottom: 1.5rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        font-family: var(--font-body);
    }

    .value-description {
        color: var(--text-main);
        font-size: 1.1em;
        line-height: 1.7em;
        max-width: 60ch;
    }
</style>
