---
import portfolioData from "../data/portfolio.json";
const { personal, navigation } = portfolioData;
---

<nav class="nav" id="navbar">
  <div class="container">
    <div class="nav-content">
      <a href="/" class="nav-logo">
        <img src="/logo.svg" alt="Logo" class="logo-img" />
        {personal.name}
      </a>
      <ul class="nav-links">
        {
          navigation.map((item) => (
            <li>
              <a href={`#${item.target}`} class="nav-link">
                {item.label}
              </a>
            </li>
          ))
        }
      </ul>
      <button class="mobile-menu" id="mobile-menu">Menu</button>
    </div>
  </div>
</nav>

<style>
  .nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: var(--bg-color); /* Cream */
    z-index: 100;
    border-bottom: 2px solid var(--text-main); /* Strong retro border */
    transition: all 0.3s ease;
  }

  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 0;
  }

  .nav-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 400;
    color: var(--text-main);
    letter-spacing: -0.02em;
    text-decoration: none;
  }

  .logo-img {
    height: 40px;
    width: auto;
    border: 1px solid var(--text-main);
    border-radius: 50%; /* Circle like the logo itself */
    background: var(--bg-color);
  }

  .nav-links {
    display: flex;
    gap: 3rem;
    list-style: none;
  }

  .nav-link {
    color: var(--text-muted);
    font-family: var(--font-body);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.9em;
    text-decoration: none;
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
  }

  .nav-link:hover {
    color: var(--accent);
  }

  /* Underline animation */
  .nav-link::after {
    content: "";
    position: absolute;
    width: 0;
    height: 2px;
    bottom: -4px;
    left: 0;
    background-color: var(--accent);
    transition: width 0.3s ease;
  }

  .nav-link:hover::after {
    width: 100%;
  }

  .mobile-menu {
    display: none;
    background: none;
    border: 2px solid var(--text-main);
    padding: 0.5rem 1rem;
    font-family: var(--font-body);
    font-size: 1em;
    font-weight: 600;
    cursor: pointer;
    color: var(--text-main);
    border-radius: 4px;
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }

    .mobile-menu {
      display: block;
    }
  }
</style>

<script>
  const mobileMenuBtn = document.getElementById("mobile-menu");
  const navLinks = document.querySelector(".nav-links") as HTMLElement;
  let isMenuOpen = false;

  if (mobileMenuBtn && navLinks) {
    mobileMenuBtn.addEventListener("click", () => {
      isMenuOpen = !isMenuOpen;
      if (isMenuOpen) {
        navLinks.style.display = "flex";
        navLinks.style.flexDirection = "column";
        navLinks.style.position = "absolute";
        navLinks.style.top = "100%";
        navLinks.style.left = "0";
        navLinks.style.right = "0";
        navLinks.style.background = "var(--bg-color)";
        navLinks.style.padding = "2rem";
        navLinks.style.borderBottom = "2px solid var(--text-main)";
        navLinks.style.gap = "1.5rem";
        navLinks.style.alignItems = "center";
        mobileMenuBtn.textContent = "Close";
      } else {
        navLinks.style.display = "none";
        mobileMenuBtn.textContent = "Menu";
      }
    });

    // Close mobile menu when clicking on a link
    document.querySelectorAll(".nav-link").forEach((link) => {
      link.addEventListener("click", () => {
        if (window.innerWidth <= 768) {
          navLinks.style.display = "none";
          mobileMenuBtn.textContent = "Menu";
          isMenuOpen = false;
        }
      });
    });
  }
</script>
