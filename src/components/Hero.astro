---
import portfolioData from "../data/portfolio.json";
const { personal } = portfolioData;
---

<section class="hero">
  <div class="container">
    <h1 class="hero-name fade-in">{personal.name}</h1>
    <div class="hero-title fade-in">{personal.title}</div>
    <div class="hero-location fade-in">{personal.location}</div>
    <p class="hero-tagline fade-in">{personal.tagline}</p>
    <div class="hero-actions fade-in">
      <a href="#work" class="btn btn-primary">Ver Proyectos</a>
      <a href="#contact" class="btn btn-outline">Cont√°ctame</a>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 90vh; /* Slightly less than 100vh for retro feel */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 8rem 0;
    background-image: radial-gradient(var(--text-muted) 1px, transparent 1px);
    background-size: 20px 20px; /* Dot pattern texture */
    background-position: center;
  }

  /* Mask the pattern so it fades out */
  .hero::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle, transparent 20%, var(--bg-color) 80%);
    pointer-events: none;
    z-index: 0;
  }

  .container {
    position: relative;
    z-index: 1;
  }

  .hero-name {
    font-size: 5rem;
    font-weight: 400; /* Regular weight for Serif */
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
    color: var(--text-main);
    text-shadow: 2px 2px 0px var(--accent); /* Retro text shadow */
  }

  .hero-title {
    color: var(--accent);
    margin-bottom: 0.5rem;
    font-size: 1.1em;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-weight: 700;
    font-family: var(--font-body);
  }

  .hero-location {
    color: var(--text-muted);
    margin-bottom: 3rem;
    font-size: 0.9em;
    font-style: italic;
    font-family: var(--font-heading);
  }

  .hero-tagline {
    max-width: 600px;
    margin: 0 auto 4rem;
    color: var(--text-main);
    font-size: 1.25em;
    line-height: 1.6;
    font-weight: 400;
  }

  .hero-actions {
    display: flex;
    gap: 2rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Re-defining btn here if needed, or relying on global */
  .btn {
    padding: 1rem 2.5rem;
    font-family: var(--font-body);
    font-size: 1em;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-weight: 600;
    cursor: pointer;
    text-decoration: none;
    transition: all 0.2s ease;
    border: 2px solid var(--text-main);
    position: relative;
  }

  .btn-primary {
    background: var(--text-main);
    color: var(--bg-color);
    box-shadow: 4px 4px 0px var(--accent);
  }

  .btn-primary:hover {
    transform: translate(2px, 2px);
    box-shadow: 2px 2px 0px var(--accent);
  }

  .btn-outline {
    background: transparent;
    color: var(--text-main);
  }

  .btn-outline:hover {
    background: var(--text-main);
    color: var(--bg-color);
  }

  @media (max-width: 768px) {
    .hero-name {
      font-size: 3rem;
    }

    .hero-actions {
      flex-direction: column;
      gap: 1rem;
    }

    .btn {
      width: 100%;
    }
  }
</style>

<script>
  setTimeout(() => {
    document.querySelectorAll(".hero .fade-in").forEach((el, index) => {
      setTimeout(() => {
        el.classList.add("visible");
      }, index * 200);
    });
  }, 300);
</script>
