---
const res = await fetch("https://devflow.azaldev.com/api/posts.json");
const data = await res.json();
const posts = data.latestPosts.slice(0, 3); // Solo los 3 últimos posts
---

<section class="latest-posts section">
  <div class="container">
    <h2 class="section-title fade-in">Últimos Posts</h2>
    <div class="posts-grid">
      {
        posts.map((post) => (
          <a
            href={`https://devflow.azaldev.com/blog/${post.slug}`}
            target="_blank"
            class="post-card fade-in"
          >
            <div class="post-content">
              <span class="post-category">{post.data.category}</span>
              <h3 class="post-title">{post.data.title}</h3>
              <p class="post-description">{post.data.description}</p>
              <div class="post-footer">
                <span class="post-date">
                  {new Date(post.data.publishDate).toLocaleDateString("es-ES", {
                    year: "numeric",
                    month: "short",
                    day: "numeric",
                  })}
                </span>
                <span class="post-more">Leer más →</span>
              </div>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>

<style>
  .latest-posts {
    text-align: left;
  }

  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2.5rem;
    margin-top: 3rem;
  }

  .post-card {
    display: block;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
    transition: all 0.3s ease;
    background: var(--bg-color);
    border: 2px solid var(--text-main);
    padding: 2rem;
    border-radius: 4px;
    box-shadow: 6px 6px 0px var(--text-main);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-card:hover {
    transform: translate(-3px, -3px);
    box-shadow: 9px 9px 0px var(--accent);
    border-color: var(--text-main);
  }

  .post-content {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .post-category {
    font-size: 0.75rem;
    text-transform: uppercase;
    color: var(--accent);
    letter-spacing: 0.15em;
    font-weight: 700;
    margin-bottom: 0.5rem;
    font-family: var(--font-body);
  }

  .post-title {
    font-size: 1.4rem;
    color: var(--text-main);
    font-family: var(--font-heading);
    margin-bottom: 1rem;
    line-height: 1.3;
  }

  .post-description {
    color: var(--text-main);
    opacity: 0.8;
    margin-bottom: 2rem;
    font-size: 0.95em;
    line-height: 1.6;
    flex-grow: 1;
  }

  .post-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1.5rem;
    border-top: 1px dashed rgba(26, 44, 56, 0.2);
  }

  .post-date {
    color: var(--text-muted);
    font-size: 0.8rem;
    font-family: var(--font-body);
    font-weight: 500;
  }

  .post-more {
    font-size: 0.85rem;
    font-weight: 700;
    color: var(--text-main);
    font-family: var(--font-body);
    text-transform: uppercase;
  }

  @media (max-width: 768px) {
    .posts-grid {
      gap: 2rem;
    }
  }
</style>

<script>
  setTimeout(() => {
    document.querySelectorAll(".latest-posts .fade-in").forEach((el, index) => {
      setTimeout(() => el.classList.add("visible"), index * 200);
    });
  }, 300);
</script>
