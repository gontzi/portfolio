---
import portfolioData from "../data/portfolio.json";
const { contact, personal } = portfolioData;
---

<footer class="footer">
  <div class="container">
    <div class="footer-content fade-in">
      <div class="footer-logo">
        <img src="/logo.svg" alt="Logo" class="footer-logo-img" />
        {personal.name}
      </div>
      <p class="footer-text">{contact.footer}</p>
      <div class="footer-year">
        Built with <span class="retro-heart">‚ù§</span> Retro Style
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 6rem 0 4rem;
    border-top: 2px solid var(--text-main);
    background-color: var(--bg-color);
    text-align: center;
  }

  .footer-logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    font-family: var(--font-heading);
    font-size: 1.5rem;
    color: var(--text-main);
    margin-bottom: 1rem;
  }

  .footer-logo-img {
    height: 60px;
    width: auto;
    border: 2px solid var(--text-main);
    border-radius: 50%;
    background: var(--bg-color);
  }

  .footer-text {
    color: var(--text-muted);
    font-size: 1.1em;
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .footer-year {
    color: var(--text-main);
    font-size: 0.85em;
    font-family: var(--font-body);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .retro-heart {
    color: var(--accent);
  }
</style>
