---
import portfolioData from "../data/portfolio.json";
const { contact, personal } = portfolioData;
---

<footer class="footer">
  <div class="container">
    <div class="footer-content fade-in">
      <div class="footer-logo">{personal.name}</div>
      <p class="footer-text">{contact.footer}</p>
      <div class="footer-year">
        © {new Date().getFullYear()} — Built with <span class="retro-heart"
          >❤</span
        > Retro Style
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    padding: 6rem 0 4rem;
    border-top: 2px solid var(--text-main);
    background-color: var(--bg-color);
    text-align: center;
  }

  .footer-logo {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    color: var(--text-main);
    margin-bottom: 1rem;
  }

  .footer-text {
    color: var(--text-muted);
    font-size: 1.1em;
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .footer-year {
    color: var(--text-main);
    font-size: 0.85em;
    font-family: var(--font-body);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .retro-heart {
    color: var(--accent);
  }
</style>
